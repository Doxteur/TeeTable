{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tee-table",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:1420", "https://1fichier.com/*"]
      }
    },
    "windows": [
      {
        "title": "client",
        "width": 1200,
        "height": 800,
        "additionalBrowserArgs": "--disable-web-security"
      }
    ],
    "security": {
      "csp": null,
      "dangerousUseHttpScheme":true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tee-table.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "windows": {
        "installMode": "basicUi"
      },
      "active": true,
      "endpoints": [
        "https://github.com/Doxteur/DL_tee-table/releases/latest/download/updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhEQURCRkMxRDc0RUREMzAKUldRdzNVN1h3Yit0alIzakRXMjBUUk5vMktscHBBN0I2cGloQXR4SGdWTDV3VHlMOWxraWdGejEK"
    }
  }
}
